<script src="{{ 'product-with-js2.js' | asset_url }}"></script>
<script src="{{ 'shopify-money.js' | asset_url }}"></script>
<h1>{{ product.title }}</h1>
<h2>{{ product.title }}</h2>
<div class="product-price"> From:{{ product.selected_or_first_available_variant.price | money}}</div>
<img class="product-image" src="{{ product.selected_or_first_available_variant.featured_image | image_url: width: 400}}" style="max-width: 400px" >
{%  if product.media.size != blank %}
    
        <div class="product-img-grid">
            {% for image in product.media %}
                
        <img src="{{ image | image_url: width: 100 }}">
        {%  endfor %}   
    </div>
    
{% endif %}

{% form 'product', product %}
        {% for product_option in product.options_with_values %}
            <select name="option{{ product_option.position }}">
                {% for value in product_option.values %}
                    <option {% if value.selected %}selected{% endif %}>{{ value.name }}</option>
                {% endfor %}
            </select>
        {% endfor %}
        {% comment %} <select style="display:none" id="current-varient" name="id" data-product-handle="{{ product.handle }}">
            {% for variant in product.variants %}
            <option value="{{ variant.id }}" 
            {% if variant.id == product.selected_or_first_available_variant.id %}selected{% endif %}>{{ variant.title }}</option>
            {% endfor %}
        </select> {% endcomment %}
        <input id="current-varient" type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-product-handle="{{ product.handle }}">
        {% if product.selected_or_first_available_variant.available %}
        <button id="atc-button" type="submit"> Add to cart</button>
        {% else %}
          <button id="atc-button" disabled type="submit"> Sold out</button>  
        {% endif %}
    {% endform %}

{% comment %} {% form 'product', product  %}
    <input type="hidden" name="id" value= "{{ product.selected_or_first_available_variant.id }}">
    <button type="submit"> Add to cart</button>
{% endform %} {% endcomment %}

